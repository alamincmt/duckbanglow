<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.ui.admin.HotelAddActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="false"
                app:elevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <LinearLayout
                        android:id="@+id/lay_purpose_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_Purpose_name"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:hint="Property Name"
                                android:inputType="text"
                                android:paddingStart="8dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="4dp"
                                android:textColor="@color/add_properties_text"
                                android:textColorHint="@color/add_properties_text"
                                android:textSize="14sp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_purpose_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_purpose_name"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_Purpose_desc"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:minHeight="70dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:hint="Property Description"
                                android:inputType="text"
                                android:paddingStart="8dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="4dp"
                                android:textColor="@color/add_properties_text"
                                android:textColorHint="@color/add_properties_text"
                                android:textSize="14sp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_purpose_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_purpose_desc"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_Purpose_phone"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:hint="Property Phone Number"
                                android:inputType="phone"
                                android:paddingStart="8dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="4dp"
                                android:textColor="@color/add_properties_text"
                                android:textColorHint="@color/add_properties_text"
                                android:textSize="14sp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_purpose_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_purpose_phone"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_Purpose_address"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:hint="Property Address"
                                android:inputType="text"
                                android:paddingStart="8dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="4dp"
                                android:textColor="@color/add_properties_text"
                                android:textColorHint="@color/add_properties_text"
                                android:textSize="14sp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp" />

                        </LinearLayout>

                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/lay_purpose_bedroom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_purpose_address"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_Purpose_bedroom"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:hint="Property Bedroom"
                                android:inputType="numberDecimal"
                                android:paddingStart="8dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="4dp"
                                android:textColor="@color/add_properties_text"
                                android:textColorHint="@color/add_properties_text"
                                android:textSize="14sp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp" />


                            <EditText
                                android:id="@+id/edt_Purpose_bathroom"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:hint="Property Bathroom"
                                android:inputType="numberDecimal"
                                android:paddingStart="8dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="4dp"
                                android:textColor="@color/add_properties_text"
                                android:textColorHint="@color/add_properties_text"
                                android:textSize="14sp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:layout_marginLeft="5dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp" />

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lay_purpose_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_purpose_bedroom"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_Purpose_area"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:hint="Property Area"
                                android:inputType="text"
                                android:paddingStart="8dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="4dp"
                                android:textColor="@color/add_properties_text"
                                android:textColorHint="@color/add_properties_text"
                                android:textSize="14sp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp" />

                            <EditText
                                android:id="@+id/edt_Purpose_price"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:hint="Price Per Night"
                                android:inputType="text"
                                android:paddingStart="8dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="4dp"
                                android:textColor="@color/add_properties_text"
                                android:textColorHint="@color/add_properties_text"
                                android:textSize="14sp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:layout_marginLeft="5dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp" />

                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/lay_purpose_fur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_purpose_area"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/sp_destrict"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:spinnerMode="dropdown"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:layout_marginRight="5dp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_type_fur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_purpose_fur"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_short_address"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:hint="Short Address"
                                android:inputType="text"
                                android:paddingStart="8dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="4dp"
                                android:textColor="@color/add_properties_text"
                                android:textColorHint="@color/add_properties_text"
                                android:textSize="14sp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_type_fur"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="12dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/submit_button"
                            android:paddingStart="10dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:paddingEnd="10dp"
                            android:elevation="0dp"
                            android:text="@string/submit"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>